<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NewCreditCardActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titular"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/edit_text_titular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NÃºmero de tarjeta"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/edit_text_num_credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:maxLength="19"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caducidad"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/edit_text_caducidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CCV"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/edit_text_CCV"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:maxLength="3"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/button_scan_credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="Escanear tarjeta"
            android:textAlignment="center"/>
        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="Registrar tarjeta"
            android:layout_marginBottom="30dp"/>-->
        </LinearLayout>
    </RelativeLayout>